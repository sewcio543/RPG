<Window x:Class="GUI.End"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="End" Height="600"  Width="550" WindowStartupLocation="CenterScreen" Background="Green" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" Margin="10,0,0,0" Orientation="Horizontal" VerticalAlignment="Top">
            <Image Source="/Resources/collect.png"  Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/archerBlue.png" Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/warriorBlue.png"  Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/warriorRed.png"  Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/archerRed.png" Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/Fight.png" Width="80" Height="80"/>
        </StackPanel>

        <StackPanel Margin="110,230,0,0">
            <Button Style="{StaticResource ButtonStyle}" x:Name="nextButton" Content="Continue" Height="100" VerticalAlignment="Top" HorizontalAlignment="Left" Click="nextButton_Click"/>
            <Button Style="{StaticResource ButtonStyle}" x:Name="exitButton"  Content="Exit" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"  Height="100"  Click="exit_Click"/>

        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" VerticalAlignment="Bottom" >
            <Image Source="/Resources/port.png" Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/catapultYellow.png" Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/cannonYellow.png" Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/cannonPurple.png"  Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/catapultPurple.png" Width="80" Height="80"/>
            <Image Margin="10,0,0,0" Source="/Resources/mine.png" Width="80" Height="80"/>

        </StackPanel>

        <Label x:Name="winner" Margin="0,100,0,0" Width="500" Height="100" Background="LightSeaGreen" Content="Hello" VerticalAlignment="Top" FontSize="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
      
    </Grid>
</Window>
